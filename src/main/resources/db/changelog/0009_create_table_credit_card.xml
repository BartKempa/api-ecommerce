<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="0009-1" author="admin">
        <createTable tableName="credit_card">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="card_number" type="VARCHAR(24)"/>
            <column name="card_validity" type="VARCHAR(7)"/>
            <column name="cardCVV" type="VARCHAR(3)"/>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_credit_card_user"
                             referencedTableName="users"
                             referencedColumnNames="id"
                />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>